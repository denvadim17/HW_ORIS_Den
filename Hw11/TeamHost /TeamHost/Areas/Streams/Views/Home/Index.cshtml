@using TeamHost.Domain.Entities
@model List<Video>
@{
    ViewData["Title"] = "Market";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="uk-text-lead">Streams</h3>
<div data-uk-filter="target: .js-filter">
    <ul class="js-filter uk-grid-small uk-child-width-1-1 uk-child-width-1-5@xl uk-child-width-1-4@l uk-child-width-1-3@m uk-child-width-1-2@s" data-uk-grid>
        @foreach(var video in Model)
        {
            <li data-type="action">
                <div class="stream-item">
                    <div class="stream-item__box">
                        <div class="stream-item__media" data-uk-lightbox="video-autoplay: true">
                            <a href="@video.VideoUrl" data-attrs="width: 1280; height: 720;" data-caption="Grand Theft Auto V"><img src="~/img/streem-item-7.jpg" alt="Grand Theft Auto V" /></a>
                        </div>
                        <div class="stream-item__body">
                            <div class="stream-item__title">@video.Title</div>
                            <div class="stream-item__nicname">@video.Description</div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>